<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.IndustryInfoMapper">
	<insert id="add" parameterType="IndustryInfo">
		insert into industry_info_list ( name ) values (#{name})
	</insert>

	<delete id="delete" parameterType="IndustryInfo">
		delete from industry_info_list where id= #{id}
	</delete>

	<select id="get" parameterType="_int" resultType="IndustryInfo">
		select * from industry_info_list where id= #{id}
	</select>

	<update id="update" parameterType="IndustryInfo">
		update industry_info_list set name=#{name} where id=#{id}
	</update>
	<select id="list" resultType="IndustryInfo">
		select * from industry_info_list
	</select>
</mapper>